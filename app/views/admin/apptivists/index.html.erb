<%= render 'admin/header' %>
<%= render 'shared/flashes' %>
<%= render 'shared/filter', type: 'users' %>

<ul class="user-list">
    <% @users.each do |user| %>
        <li>
            <%= link_to apptivist_path(user.id), remote: true, method: :post do %>
                <div class="person"></div>
                <h3 class="din med"><%= user.first_name %> <%= user.last_name %></h3>
                <h4 class="title">Founder</h4>
            <% end %>
        </li>
    <% end %>
</ul>

<div id="infinite-indicator" class="group"></div>
