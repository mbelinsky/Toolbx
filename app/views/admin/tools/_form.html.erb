<%= form_for [:admin, @tool] do |f| %>
	<% if @tool.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

			<ul>
			<% @tool.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="left">
		<div class="field full">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>

		<div class="field inline check">
			<%= f.label :featured %>
			<%= f.check_box :featured %>
		</div>

		<div class="field inline tiny">
			<%= f.label :cost %>
			<%= f.text_field :cost %>
		</div>

		<div class="field inline last">
			<%= f.label :license_id %>
			<%= f.collection_select :license_id, License.all, :id, :name %>
		</div>

		<div class="field full">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>

		<div class="field inline">
			<%= f.label :site_url %>
			<%= f.text_field :site_url %>
		</div>

		<div class="field inline last">
			<%= f.label :app_store_url %>
			<%= f.text_field :app_store_url %>
		</div>

		<div class="field inline">
			<%= f.label :google_play_url %>
			<%= f.text_field :google_play_url %>
		</div>

		<div class="field inline last">
			<%= f.label :github_url %>
			<%= f.text_field :github_url %>
		</div>
	</div>

	<div class="right">
		<div class="field icon">
			<%= f.label :icon %>

			<div class="inside">
				<%= f.file_field :icon %>
				<%= image_tag @tool.icon.url(:small) %>
				<button>Browse</button>
			</div>
		</div>
	</div>

	<div class="actions">
		<%= f.submit @tool.new_record? ? "Add Tool" : "Update Tool", class: "submit button" %>
	</div>
<% end %>
