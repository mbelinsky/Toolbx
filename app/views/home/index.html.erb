<% categories = Category.all %>

<div class="main">
	<div class="inner group">
		<h2 class="strike">
			<span>Newest Articles</span>
			<menu class="gray category-icons">
				<% categories.each do |category| %>
					<li><%= link_to category.title, articles_path(params: {category_ids: [category.id]}), class: category.title.parameterize %></li>
				<% end %>
			</menu>
		</h2>
		<ul class="items articles">
			<% @articles.each do |article| %>
				<%= render 'articles/article', article: article %>
			<% end %>
		</ul>
	</div>
	<div class="fade"></div>
	<%= link_to "See All Articles", articles_path, class: 'see-all button' %>

	<div class="inner group">
		<h2 class="strike">
			<span>Newest Tools</span>
			<menu class="gray category-icons">
				<% categories.each do |category| %>
					<li><%= link_to category.title, tools_path(params: {category_ids: [category.id]}), class: category.title.parameterize %></li>
				<% end %>
			</menu>
		</h2>
		<ul class="items">
			<% @tools.each do |tool| %>
				<%= render 'tools/tool', tool: tool %>
			<% end %>
		</ul>
	</div>
	<div class="fade"></div>
	<%= link_to "See All Tools", tools_path, class: 'see-all button' %>
</div>