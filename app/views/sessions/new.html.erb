<h1 class="strike four col"><span>Log In</span></h1>

<%= render 'shared/flashes' %>

<%= form_tag sessions_path do %>
	<div class="field">
		<label for="email">Username or Email</label>
		<%= text_field_tag :email_or_username, params[:email_or_username] %>
	</div>
	<div class="field">
		<label for="password">Password <%= link_to "Forgot?", new_password_reset_path, tabindex: -1, class: 'forgot-password' %></label>
		<%= password_field_tag :password %>
	</div>

	<div class="actions group">
		<%= submit_tag "Log In", class: "submit button" %>

		<div class="sign-up">
			<em>New?</em> <%= link_to "Sign up now", signup_path %>
		</div>
	</div>
<% end %>