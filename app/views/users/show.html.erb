<header class="user group">
	<div class="left">
		<%= image_tag @user.profile_picture.url(:medium) %>
		<%= @user.full_name %>
	</div>
	<div class="right">
		<nav class="social">
			<ul>
				<% if @user.twitter_username %><li><%= link_to 'Twitter', @user.twitter_url, class: 'twitter', target: '_blank' %></li><% end %>
				<% if @user.facebook_username %><li><%= link_to 'Facebook', @user.facebook_url, class: 'facebook', target: '_blank' %></li><% end %>
				<% if @user.linkedin_username %><li><%= link_to 'Linkedin', @user.linkedin_url, class: 'linkedin', target: '_blank' %></li><% end %>
				<% if @user.website_url %><li><%= link_to 'Website', @user.formatted_website_url, class: 'website', target: '_blank' %></li><% end %>
			</ul>
		</nav>
	</div>
</header>

<h2 class="strike">
	<span><%= @user.first_name %>'s Toolbox</span>
	<menu>
		<li><%= link_to 'Tools', admin_tools_path, class: 'current' %></li>
		<li><%= link_to 'Articles', admin_articles_path %></li>
	</menu>
</h2>