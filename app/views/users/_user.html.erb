<li class="user" itemscope itemtype="http://schema.org/Person">
	<%= link_to user_path(user) do %><%= image_tag user.profile_picture.url(:small), class: 'profile-picture', itemprop: 'image' %><% end %>

	<div class="right">
		<h4 itemprop="name"><%= link_to user.full_name, user_path(user), itemprop: 'url' %></h4>

		<ul class="categories">
			<% user.categories.each do |category| %>
				<li><%= category.title %></li>
			<% end %>
		</ul>
	</div>

	<div class="bottom">
		<div class="bubble articles">
			<%= link_to articles_user_path(user), class: 'group' do %>
				<div class="action-icon star"></div>
				<span><%= user.articles_count %></span>
			<% end %>
		</div>
		<div class="bubble tools">
			<%= link_to tools_user_path(user), class: 'group' do %>
				<div class="action-icon toolbox"></div>
				<span><%= user.tools_count %></span>
			<% end %>
		</div>
	</div>
</li>