<!doctype html>
<html class="<%= "#{@os} #{@browser} #{controller.controller_name} #{controller.action_name}"%>">
	<head>
		<title>The Toolbox</title>
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="wrap-outer">
			<div class="wrap-inner">
				<header id="top">
					<div class="inner">
						<h6><%= link_to 'The Toolbox', root_path %></h6>

						<menu>
							<li><%= link_to 'Tools', tools_path %></li>
							<li><%= link_to 'Community', users_path %></li>
							<li><%= link_to 'Blog', articles_path %></li>
							<li><%= link_to 'Login', login_path %></li>
						</menu>
					</div>
				</header>

				<div class="inner">
					<%= yield %>
				</div>
			</div>
		</div>

		<footer id="bottom">
			<div class="inner">
				<p class="copyright">Â© Skylight Pictures 2013</p>

				<menu class="social">
					<li><a class="facebook" href="#">Facebook</a></li>
					<li><a class="twitter" href="#">Twitter</a></li>
				</menu>
				<menu class="nav">
					<li><%= link_to "Tools", tools_path %></li>
					<li><%= link_to "Community", users_path %></li>
					<li><%= link_to "Blog", articles_path %></li>
					<li><%= link_to "Contact", contact_index_path %></li>
					<li><%= link_to "Privacy", privacy_index_path %></li>
				</menu>
			</div>
		</footer>
	</body>
</html>